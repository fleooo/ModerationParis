{% extends 'base.html.twig' %}

{% block title %}Liste des commandes{% endblock %}

{% block body %}
    <h1>Liste des commandes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Référence</th>
                <th>Date de création</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for order in orders %}
                <tr>
                    <td>{{ order.id }}</td>
                    <td>{{ order.reference }}</td>
                    <td>{{ order.createdAt|date('Y-m-d H:i') }}</td>
                    <td>
                        <a href="{{ path('admin_orders_show', {'id': order.id}) }}">Voir</a>
                        <a href="{{ path('admin_orders_edit', {'id': order.id}) }}">Modifier</a>
                        <form method="post" action="{{ path('admin_orders_delete', {'id': order.id}) }}" style="display:inline-block;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
                            <button class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette commande ?');">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_orders_add') }}" class="btn btn-primary">Ajouter une commande</a>
{% endblock %}